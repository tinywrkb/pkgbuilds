# Maintainer: tinywrkb <tinywrkb@gmail.com>

_pkgname=lxcfs
pkgname=uosys-mods-${_pkgname}
pkgver=2021.06.19.1
pkgrel=1
pkgdesc="$_pkgname uosys mods"
arch=('any')
licesne=('GPL')
url=''
depends=('uosys-mods')

build() {
  cat << EOF > tmpfiles.d.conf
# $_pkgname
# TODO: check if this can be auto-generated by the daemon
d /var/lib/lxcfs - - - - -
EOF
}

package() {
  depends+=($_pkgname)
  source /usr/lib/os/os-mods-install
}
