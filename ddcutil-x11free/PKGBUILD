# Contributor: Felix Yan <felixonmars@archlinux.org>
# Contributor: Deon Spengler <deon@spengler.co.za>

pkgname=ddcutil-x11free
pkgver=1.2.2
pkgrel=1
pkgdesc='Query and change Linux monitor settings using DDC/CI and USB.'
url='http://ddcutil.com/'
arch=('x86_64')
license=('GPL2')
depends=('glib2' 'i2c-tools' 'libusb' 'libdrm')
makedepends=('systemd')
provides=('ddcutil')
conflicts=('ddcutil')
source=(https://github.com/rockowitz/ddcutil/archive/v$pkgver/ddcutil-$pkgver.tar.gz)
sha512sums=('0329711e536cbcaee2efe6cf981a17181ab318846e9c6a82f2ceacc42691ba49c06df44a52d1f079568e9ccec588cc85d4de4adf19b6db83bebe4bb90ae29207')

prepare() {
  cd ddcutil-$pkgver
  NOCONFIGURE=1 ./autogen.sh
}

build() {
  cd ddcutil-$pkgver
  ./configure \
    --prefix=/usr \
    --disable-x11 \

  make
}

package() {
  cd ddcutil-$pkgver
  make DESTDIR="$pkgdir" install
}

