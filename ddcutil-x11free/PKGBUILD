# Contributor: Deon Spengler <deon@spengler.co.za>

_pkgname=ddcutil
pkgname=${_pkgname}-x11free
pkgver=1.2.1
pkgrel=1
pkgdesc='Query and change Linux monitor settings using DDC/CI and USB.'
url='http://ddcutil.com/'
arch=('x86_64')
license=('GPL2')
depends=('glib2' 'i2c-tools' 'libusb' 'libdrm')
makedepends=('systemd')
provides=($_pkgname)
conflicts=($_pkgname)
source=(https://github.com/rockowitz/ddcutil/archive/v$pkgver/$_pkgname-$pkgver.tar.gz)
sha512sums=('f80c45ed47a059c71ddf7dc56e8daf9b666120960d1911175d390f95ab9691a62cffb7ce4555ddc418e3e9cfe7a575a70778c35809cdea598d7610dac915ccbc')

prepare() {
  cd $_pkgname-$pkgver
  NOCONFIGURE=1 ./autogen.sh
}

build() {
  cd $_pkgname-$pkgver
  ./configure \
    --prefix=/usr \
    --disable-x11 \

  make
}

package() {
  cd $_pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}

