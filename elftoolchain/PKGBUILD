# Maintainer: tinywrkb <tinywrkb@gmail.com>

pkgname=elftoolchain
pkgver=0.7.1
_tetver=3.8
pkgrel=1
pkgdesc='The ELF Tool Chain Project'
arch=(x86_64)
url='http://elftoolchain.sourceforge.net/'
license=('BSD')
#depend=''
makedepend=('bmake' 'python2-yaml')
source=("https://download.sourceforge.net/sourceforge/${pkgname}/${pkgname}-${pkgver}.tar.bz2"
        "http://tetworks.opengroup.org/downloads/38/software/Sources/${_tetver}/tet${_tetver}-src.tar.gz")
sha256sums=('SKIP'
	    'SKIP')

prepare() {
  # set python2 only env
}

build() {
  cd ${pkgname}-${pkgver}
  bmake \
    WITH_TESTS=no \
    WITH_DOCUMENTATION=no
}

package() {
  cd ${pkgname}-${pkgver}
  bmake DESTDIR="${pkgdir}" install
}
