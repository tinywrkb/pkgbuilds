# Maintainer: tinywrkb <tinywrkb@gmail.com>

_pkgname=mlocate
pkgname=uosys-mods-${_pkgname}
pkgver=2021.01.26.1
pkgrel=1
pkgdesc="$_pkgname uosys mods"
arch=('any')
licesne=('GPL')
url=''
depends=('uosys-mods')

build() {
  cat << EOF > tmpfiles.d.conf
# $_pkgname
d /var/lib/locate - - - - -
d /var/lib/mlocate - - - - -
EOF
}

package() {
  depends+=($_pkgname)
  source /usr/lib/os/os-mods-install
}
