# Maintainer: tinywrkb <tinywrkb@gmail.com>

# TODO: build from source
pkgname=libwbclient-minimal
pkgdesc='Winbind client libs'
pkgver=4.17.4
pkgrel=1
arch=(x86_64)
url='https://www.samba.org'
license=(LGPL)
source=("smbclient-${pkgver}-${pkgrel}-x86_64.pkg.tar.zst::https://archlinux.org/packages/extra/x86_64/smbclient/download")
sha256sums=('3fd521eae58ada5d03690e043bf464830bea92d6ea941069925706562326da62')

package() {
  depends=(libbsd)
  conflicts=(smbclient)
  provides=(libwbclient smbclient)

  cd usr

  install -Dm644 -t "${pkgdir}"/usr/include/samba-4.0/ \
    include/samba-4.0/wbclient.h

  pushd lib
  install -Dm644 -t "${pkgdir}"/usr/lib/pkgconfig/ \
    pkgconfig/wbclient.pc

  install -dm755 "${pkgdir}"/usr/lib/
    mv libwbclient.so* "${pkgdir}"/usr/lib/
}
