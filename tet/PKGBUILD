# Maintainer: tinywrkb <tinywrkb@gmail.com>

pkgname=tet
pkgver=3.8
pkgrel=1
pkgdesc='bsd test environment framwork'
arch=(x86_64)
url='http://tetworks.opengroup.org'
license=('BSD')
#depend=''
makedepend=('bmake')
source=("http://tetworks.opengroup.org/downloads/38/software/Sources/3.8/tet${pkgver}-src.tar.gz")
sha256sums=('SKIP')

build() {
	cd ${pkgname}${pkgver}
	sh ./configure -t lite
	cd src
	bmake
}

package() {
	cd ${pkgname}${pkgver}/src
#	PREFIX="$pkgdir" DESTDIR="$pkgdir/" bmake install
	bmake install
	mkdir -p "$pkgdir"/usr/bin/
	install -m755 "$srcdir"/${pkgname}${pkgver}/bin/{grw,tcc,tet_start} -t "$pkgdir"/usr/bin/
	mkdir -p "$pkgdir"/usr/lib/
	install -m755 "$srcdir"/${pkgname}${pkgver}/lib/tet3/*so -t "$pkgdir"/usr/lib/
}
