# Maintainer: tinywrkb <tinywrkb@gmail.com>

pkgname=mpv-umpv-git
_pkgname=mpv
pkgver=r20.eeb711f5f3
pkgrel=1
pkgdesc='umpv tool from mpv'
arch=('any')
url='https://github.com/mpv-player/mpv/tree/master/TOOLS'
license=('GPL3')
source=('git://github.com/mpv-player/mpv.git')
sha256sums=('SKIP')

pkgver() {
  cd ${_pkgname}
  printf "r%s.%s" "$(git rev-list --count HEAD TOOLS/umpv)" "$(git rev-list --abbrev-commit -1 HEAD TOOLS/umpv)"
}

package() {
  depends=('python')
  cd ${_pkgname}
  install -Dm755 TOOLS/umpv ${pkgdir}/usr/bin/umpv
  install -Dm644 -t ${pkgdir}/usr/share/licenses/${pkgname}/ Copyright LICENSE.GPL LICENSE.LGPL
}
