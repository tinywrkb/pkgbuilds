[Unit]
Description=%i service with podman compose
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
EnvironmentFile=-/etc/conf.d/podman-compose
RemainAfterExit=true
WorkingDirectory=/etc/podman/compose/%i
ExecStart=/usr/bin/podman-compose $PODMAN_COMPOSE_FILE up -d --remove-orphans
ExecStop=/usr/bin/podman-compose $PODMAN_COMPOSE_FILE down

[Install]
WantedBy=multi-user.target
